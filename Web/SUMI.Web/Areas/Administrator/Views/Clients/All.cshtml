@model IPagedList<SUMI.Web.Areas.Administrator.ViewModels.ClientsViewModel>
@{
    ViewData["Title"] = "All Clients";
    int currentPage = ViewBag.CurrentPage;
    int count = (currentPage - 1) * GlobalConstants.EntriesPerPage + 1;
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <hr class="withMargin" />
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col" style="width: 4%">#</th>
                <th scope="col" style="width: 24%">First Name</th>
                <th scope="col" style="width: 24%">Last Name</th>
                <th scope="col" style="width: 24%">Number of policies</th>
                <th scope="col" style="width: 24%">Number of vehicles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.PoliciesCount</td>
                    <td>@item.VehiclesCount</td>
                </tr>
                count++;
            }
        </tbody>
    </table>

    @Html.PagedListPager((IPagedList)Model, pageNumber => Url.Action("All", new { pageNumber }))
</div>
